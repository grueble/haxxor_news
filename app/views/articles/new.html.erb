<%= form_for @article do |form| %>
  <% if @article.errors.present? %>
    <ul>
      <% @article.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  
  <%= form.label :title %>
  <%= form.text_field :title %>
  <br>
  <%= form.label :link %>
  <%= form.text_field :link %>

  <br>
  <%= form.submit "Create" %>
  
  <br>
  <br>
  <%= link_to "Index", articles_path %>
<% end %>