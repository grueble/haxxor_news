<% if comments.present? %>
  <ul>
    <% comments.each do |comment| %>
      <li>
        <small>
          <%= comment.votes.sum("sign") %> points
          by <strong><%= link_to comment.user.username, user_path(comment) %></strong>
          posted <%= time_ago_in_words comment.created_at %> ago
          <%= link_to 'Show', comment_path(comment) %>
        </small>
        <br>
        <%= comment.body %>
        <%= render :partial => 'comments/list', :locals => { :comments => comment.comments } %>
      </li>
    <% end %>
  </ul>
<% end %>
