<%= form_for @user do |form| %>
  <% if @user.errors.present? %>
    <ul>
      <% @user.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  
  <%= form.label :username %>
  <%= form.text_field :username %>
  <br>
  <%= form.label :password %>
  <%= form.text_field :password %>
  <br>
  <%= form.label :password_confirmation %>
  <%= form.text_field :password_confirmation %>

  <br>
  <%= form.submit "Create" %>
<% end %>